METHOD 1:

class Solution {
public:
    string longestCommonPrefix(vector<string>& strs) {
        int n=strs.size();
        string ans="";
        sort(strs.begin(), strs.end());
        string first = strs[0];
        string last = strs[n-1];
        int size = min(first.size(), last.size());
        for(int i=0;i<size;i++){
            if(first[i]==last[i]) ans+=first[i];
            else break;
        }
        return ans;
    }
};

T.C. = O(n)
S.C. = O(n)
