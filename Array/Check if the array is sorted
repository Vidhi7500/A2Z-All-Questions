METHOD 1: 

#include<bits/stdc++.h>
using namespace std;

bool check(vector<int>& v){
    int n=v.size();
    int cnt=0;
    for(int i=0;i<n-1;i++){
        if(v[i]>v[i+1]) cnt++;
    }
    if(v[n-1]>v[0]) cnt++;
    if(cnt>1) return false;
    return true;
}

int main()
{
    int n;
    cin>>n;
    vector<int> v;
    for(int i=0;i<n;i++){
        int x;
        cin>>x;
        v.push_back(x);
    }
    bool flag = check(v);
    if(flag==true) cout<<"true"<<endl;
    else cout<<"false"<<endl;
    return 0;
}

T.C. = O(n)
S.C. = O(1)
